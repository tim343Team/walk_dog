<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/llTitle"
        style="@style/TitlePaddingParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_have_dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/ll_dog_center"
                style="@style/homePaddingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_home_normal">

                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_dog_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CHARLIE"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp30"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_gender"
                                android:layout_width="@dimen/dimen_19"
                                android:layout_height="@dimen/dimen_19"
                                android:background="@mipmap/icon_female" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="23dp"
                                android:layout_marginStart="@dimen/dp12"
                                android:background="@drawable/rectangle_white" />

                            <TextView
                                android:id="@+id/txt_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp12"
                                android:text="Lv.1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_19"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="精力充沛"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp15" />

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp15" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_dog"
                    android:layout_width="@dimen/dimen_186"
                    android:layout_height="@dimen/dimen_186"
                    android:layout_below="@+id/ll_header"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:id="@+id/ll_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_dog"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_equipment_1"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:background="@drawable/round_white"
                            android:padding="@dimen/dp5"
                            android:src="@mipmap/icon_invate"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/img_equipment_2"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:layout_marginStart="@dimen/dp20"
                            android:layout_marginEnd="@dimen/dp20"
                            android:background="@drawable/round_white"
                            android:padding="@dimen/dp5"
                            android:src="@mipmap/icon_invate"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/img_equipment_3"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:background="@drawable/round_white"
                            android:padding="@dimen/dp5"
                            android:src="@mipmap/icon_invate"
                            android:visibility="gone"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_equipment"
                    android:layout_marginTop="@dimen/dimen_11"
                    android:layout_marginBottom="@dimen/dimen_38"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="@dimen/dp20"
                        android:src="@mipmap/icon_more" />

                    <ImageView
                        android:id="@+id/img_identity"
                        android:layout_width="@dimen/dimen_27"
                        android:layout_height="@dimen/dimen_25"
                        android:background="@mipmap/icon_identity" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_dog_center"
                android:layout_marginStart="@dimen/dimen_37"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="@dimen/dimen_37"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_level_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_4"
                        android:text="LEVEL 1　"
                        android:textColor="@color/text_767676"
                        android:textSize="@dimen/dp15"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/progress_bg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_14"
                            android:layout_centerVertical="true"
                            android:background="@drawable/rectangle_ebeeff" />

                        <ImageView
                            android:id="@+id/progress_bar"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_14"
                            android:layout_centerVertical="true"
                            android:background="@drawable/button_gradual_background" />

                        <TextView
                            android:id="@+id/progress_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_km"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/aggregate_"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_number"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_time"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_region"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/walk_together" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_number_t"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_time_t"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/txt_walk_t"
                        style="@style/TextStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/color_4D67C1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_remove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle1"
                    android:textColor="@color/color_4D67C1"
                    android:layout_marginTop="@dimen/dimen_47"
                    android:gravity="end"
                    android:text="@string/remove"/>

                <com.wallet.walkthedog.custom_view.card.ShadowTextView
                    android:id="@+id/view_bottom"
                    style="@style/defshadow_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/invitation"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>