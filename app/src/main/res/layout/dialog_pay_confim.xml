<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <com.wallet.walkthedog.custom_view.card.ShadowFrameLayout
        style="@style/def_while_shadow_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmation_of_payment"
                android:textColor="#548FEB"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_message_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginEnd="@dimen/dimen_32"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_16"
                android:paddingEnd="@dimen/dimen_16"
                android:text="@string/confirm_pay_success"
                android:textColor="#485EA8"
                android:textColorHint="@color/text_BBBBBB"
                android:textSize="@dimen/dimen_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:gravity="center"
                android:orientation="horizontal">

                <com.wallet.walkthedog.custom_view.card.ShadowTextView
                    android:id="@+id/txt_cancle"
                    style="@style/def_while_shadow_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_7"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_white_primary"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/cancle"
                    android:textColor="@color/color_new_blue"
                    android:textSize="@dimen/dimen_13" />


                <com.wallet.walkthedog.custom_view.card.ShadowTextView
                    android:id="@+id/txt_search"
                    style="@style/defshadow_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_7"
                    android:layout_weight="1"
                    android:background="@drawable/button_gradual_background"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_13" />


            </LinearLayout>

        </LinearLayout>
    </com.wallet.walkthedog.custom_view.card.ShadowFrameLayout>
</LinearLayout>