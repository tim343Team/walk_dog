<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/circular_white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_25"
                android:paddingTop="@dimen/dimen_30"
                android:paddingEnd="@dimen/dimen_25"
                android:paddingBottom="@dimen/dimen_30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/release_prop"
                    android:textColor="@color/color_548FEB"
                    android:textSize="@dimen/dimen_23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:layout_marginEnd="@dimen/dp10"
                    android:text="@string/release_prop_notice"
                    android:textColor="@color/color_848484"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.wallet.walkthedog.custom_view.card.ShadowTextView
                        android:id="@+id/txt_cancle"
                        style="@style/def_while_shadow_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/cancle"
                        android:textColor="#485EA8"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <com.wallet.walkthedog.custom_view.card.ShadowTextView
                        android:id="@+id/txt_confirm"
                        style="@style/defshadow_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/confirm"
                        android:textColor="#FFF"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dimen_30"
                android:background="@mipmap/icon_dialog_close" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>