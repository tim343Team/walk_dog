<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            style="@style/MarginParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_app_name" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dimen_93"
                android:layout_height="@dimen/dimen_93"
                android:background="@mipmap/icon_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_28"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:text="Elun Mask"
                    android:textColor="@color/color_1B559F"
                    android:textSize="@dimen/dimen_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:background="@mipmap/icon_copy_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_qr"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_15"
                    android:background="@mipmap/icon_qrcode" />

                <ImageView
                    android:id="@+id/iv_edit_name"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:background="@mipmap/icon_edit_name" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_35"
                android:background="@mipmap/bg_blue_item"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp14"
                    android:text="suzu"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/iv_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_9"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/icon_next_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:background="@mipmap/bg_white_item"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_item_food"
                    android:textColor="@color/color_485EA8"
                    android:textSize="@dimen/dp14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_dog_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_9"
                    android:text="0.00"
                    android:textColor="@color/color_485EA8"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/icon_next_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_white_item"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_dog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_dog"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_9"
                        android:text="0.00"
                        android:textColor="@color/color_485EA8"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_prop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_prop"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_otc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/mine_item_otc"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_white_item"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_walk_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_walk_record"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_9"
                        android:text="0.00"
                        android:textColor="@color/color_485EA8"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_invited_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_invited_record"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_invite_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="@string/invite_register"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_train_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_train_record"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_my_card"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_invite_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_friend_title"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_white_item"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_language"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_security"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_item_about"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36"
                    android:background="@drawable/line_dash_black" />

                <LinearLayout
                    android:id="@+id/ll_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_7"
                        android:text="@string/mine_item_version"
                        android:textColor="@color/color_485EA8"
                        android:textSize="@dimen/dp14" />

                    <ImageView
                        android:layout_width="@dimen/dimen_7"
                        android:layout_height="@dimen/dimen_7"
                        android:background="@mipmap/icon_red_point"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_9"
                        android:text="v1.00"
                        android:textColor="@color/color_485EA8"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/icon_next_blue" />

                </LinearLayout>


            </LinearLayout>


            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/tv_login_out"
                android:layout_width="wrap_content"
                android:text="@string/log_out"
                android:textColor="@color/white"
                style="@style/defshadow_style"
                android:layout_marginBottom="@dimen/dimen_128"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:paddingHorizontal="40dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>