<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_230"
        android:layout_marginStart="@dimen/dimen_54"
        android:layout_marginEnd="@dimen/dimen_54"
        android:orientation="vertical">


        <TextView
            android:id="@+id/open_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_12"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_48"
            android:textStyle="bold"
            android:text="打开GPS"/>

        <TextView
            android:id="@+id/gps_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:textSize="@dimen/dimen_17"
            android:text="关闭"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_54"
        android:layout_marginEnd="@dimen/dimen_54"
        android:layout_marginBottom="@dimen/dimen_79">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_marginTop="@dimen/dp12"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dimen_17"
            android:text="@string/app_name"
            android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>