<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/circular_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_25"
            android:paddingTop="@dimen/dimen_30"
            android:paddingEnd="@dimen/dimen_25"
            android:paddingBottom="@dimen/dimen_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/training_dog"
                android:textColor="@color/color_548FEB"
                android:textSize="@dimen/dimen_23"
                android:textStyle="bold" />

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_sit"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/sit_down"
                android:textColor="#FFF"/>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_lay"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/lay_down"
                android:textColor="#FFF"/>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_come"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/come_to_me"
                android:textColor="#FFF"/>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_leave"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/leave_it"
                android:textColor="#FFF"/>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_name"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/name_recognition"
                android:textColor="#FFF"/>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_walk"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/walk_on_a_lead"
                android:textColor="#FFF"/>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_back"
                style="@style/defshadow_style"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_14"
                android:text="@string/get_back_to_his_place"
                android:textColor="#FFF"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/icon_dialog_close"/>

    </RelativeLayout>

</LinearLayout>