<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/circular_white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_25"
                android:paddingTop="@dimen/dimen_30"
                android:paddingEnd="@dimen/dimen_25"
                android:paddingBottom="@dimen/dimen_30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/invite_setting_title"
                    android:textColor="@color/color_548FEB"
                    android:textSize="@dimen/dimen_23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_29"
                    android:layout_marginTop="@dimen/dimen_41"
                    android:layout_marginEnd="@dimen/dimen_29"
                    android:text="@string/start_time"
                    android:textColor="@color/text_7B7B7B"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/ll_start"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_47"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/rectangle_f5f5f5">

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:background="@null"
                        android:hint="@string/start_time_hint"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/color_707070"
                        android:textColorHint="@color/color_707070"
                        android:textSize="@dimen/dimen_14" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_29"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginEnd="@dimen/dimen_29"
                    android:text="@string/end_time"
                    android:textColor="@color/text_7B7B7B"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/ll_end"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_47"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/rectangle_f5f5f5">

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:background="@null"
                        android:hint="@string/end_time_hint"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/color_707070"
                        android:textColorHint="@color/color_707070"
                        android:textSize="@dimen/dimen_14" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_28"
                    android:orientation="horizontal">

                    <com.wallet.walkthedog.custom_view.card.ShadowTextView
                        android:id="@+id/txt_cancle"
                        style="@style/def_while_shadow_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/cancle"
                        android:textColor="#485EA8"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <com.wallet.walkthedog.custom_view.card.ShadowTextView
                        android:id="@+id/txt_confirm"
                        style="@style/defshadow_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/confirm"
                        android:textColor="#FFF"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dimen_30"
                android:background="@mipmap/icon_dialog_close" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_218"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@drawable/rectangle_white_gray"
        android:orientation="vertical"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/select_time"
                android:textColor="@color/text_7B7B7B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_confirm_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingStart="@dimen/dimen_32"
                android:paddingEnd="@dimen/dimen_32"
                android:text="@string/confirm"
                android:textColor="@color/text_7B7B7B"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_180"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>