<?xml version="1.0" encoding="utf-8"?>
<com.wallet.walkthedog.custom_view.card.ShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/def_while_shadow_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/dimen_158"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimen_12">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/found_s"
                android:textColor="@color/color_4D67C1"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:id="@+id/img_equipment"
                android:layout_width="@dimen/dimen_52"
                android:layout_height="@dimen/dimen_60"
                android:layout_below="@+id/txt_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_equipment"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_848484"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/txt_collect"
                android:layout_width="@dimen/dimen_123"
                android:layout_height="@dimen/dimen_35"
                android:layout_below="@+id/txt_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/button_gradual_background"
                android:gravity="center"
                android:text="@string/collect"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14"
                android:visibility="invisible" />

        </RelativeLayout>

</com.wallet.walkthedog.custom_view.card.ShadowFrameLayout>
