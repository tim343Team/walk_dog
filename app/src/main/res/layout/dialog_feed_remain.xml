<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_30">

        <ImageView
            android:id="@+id/img_notice"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="@dimen/dimen_42"
            android:background="@mipmap/icon_normal_no" />

        <TextView
            android:id="@+id/txt_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_16"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8"
            android:gravity="center_horizontal"
            android:text="lack_food"
            android:textColor="@color/color_E12828"
            android:textSize="@dimen/dimen_18"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_180"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <com.wallet.walkthedog.custom_view.card.ShadowTextView
            android:id="@+id/txt_cancle"
            style="@style/def_while_shadow_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_30"
            android:gravity="center"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="@string/cancle"
            android:textColor="@color/color_4D67C1"/>

        <com.wallet.walkthedog.custom_view.card.ShadowTextView
            android:id="@+id/txt_search"
            style="@style/defshadow_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_30"
            android:gravity="center"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="@string/buy_to_food"
            android:textColor="#FFF"/>

    </LinearLayout>

</LinearLayout>