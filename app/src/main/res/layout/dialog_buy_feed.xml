<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_30"
        android:background="@drawable/circular_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/buy_to_food"
            android:textColor="@color/color_548FEB"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@mipmap/bg_dialog_normal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dog"
                android:layout_width="@dimen/dimen_81"
                android:layout_height="@dimen/dimen_94"
                android:layout_marginTop="@dimen/dimen_41"
                android:layout_marginBottom="@dimen/dimen_31"
                android:background="@mipmap/icon_dog_food" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp25"
                android:background="@drawable/rectangle_translucence"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextWhiteStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/name_" />

                        <TextView
                            android:id="@+id/txt_name"
                            style="@style/TextWhiteBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_2"
                            android:gravity="center_horizontal"
                            android:text="Beagle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextWhiteStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/gender_" />

                        <TextView
                            android:id="@+id/txt_gender"
                            style="@style/TextWhiteBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_2"
                            android:gravity="center_horizontal"
                            android:text="xxxxx" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextWhiteStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/level_" />

                        <TextView
                            android:id="@+id/txt_level"
                            style="@style/TextWhiteBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_2"
                            android:gravity="center_horizontal"
                            android:text="xxxx" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextWhiteBoldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/food_info_1" />

                    <TextView
                        style="@style/TextWhiteBoldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/food_info_2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_id"
                    style="@style/TextWhiteBoldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:gravity="center_horizontal"
                    android:text="xxxxx" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginEnd="@dimen/dimen_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/gain_weight"
                android:textColor="@color/color_848484"
                android:textSize="@dimen/dp14" />

            <TextView
                android:id="@+id/txt_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0.0g"
                android:textColor="@color/color_4D67C1"
                android:textSize="@dimen/dp14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginEnd="@dimen/dimen_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/pay"
                android:textColor="@color/color_848484"
                android:textSize="@dimen/dp14" />

            <TextView
                android:id="@+id/txt_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0 USDT"
                android:textColor="@color/color_4D67C1"
                android:textSize="@dimen/dp14"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginEnd="@dimen/dimen_25"
            android:gravity="end"
            android:text="@string/balance_"
            android:textColor="@color/color_848484"
            android:textSize="@dimen/dp14" />

        <com.wallet.walkthedog.custom_view.ShadowContainer
            android:id="@+id/group_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/transparent"
            app:containerCornerRadius="@dimen/corner_radius"
            app:containerDeltaLength="@dimen/delta_length"
            app:containerShadowColor="@color/color_t_548FEB"
            app:containerShadowRadius="@dimen/shadow_radius"
            app:deltaX="@dimen/delta_x"
            app:deltaY="@dimen/delta_y">

            <TextView
                android:id="@+id/txt_buy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_43"
                android:layout_gravity="center"
                android:background="@drawable/button_gradual_background"
                android:gravity="center"
                android:text="@string/buy"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14" />

        </com.wallet.walkthedog.custom_view.ShadowContainer>

    </LinearLayout>
</LinearLayout>