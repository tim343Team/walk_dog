<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_18"
        android:paddingTop="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_18"
        android:paddingBottom="@dimen/dimen_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/congratulation_upgrade"
            android:textColor="@color/color_548FEB"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:gravity="center"
            android:text="@string/congratulation_upgrade_info"
            android:textColor="@color/color_848484"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:id="@+id/txt_enter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_48"
            android:background="@drawable/button_gradual_background"
            android:gravity="center"
            android:text="@string/enter"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14" />

    </LinearLayout>
</LinearLayout>