<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/safety_verification"
            android:textColor="@color/color_548FEB"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/bg_input"
            android:hint="@string/please_enter_the_funding_password"
            android:inputType="textPassword"
            android:maxEms="10"
            android:padding="15dp"
            app:bgColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:buttonTint="@drawable/check_color"
            android:paddingVertical="10dp"
            android:text="@string/i_have_received_payment"
            android:textColor="@drawable/check_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_cancle"
                style="@style/def_while_shadow_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_gradual_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/cancle"
                android:textColor="#485EA8"
                android:textSize="@dimen/dimen_14" />

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_confirm"
                style="@style/defshadow_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_gradual_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>