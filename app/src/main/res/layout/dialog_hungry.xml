<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/circular_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_25"
            android:paddingTop="@dimen/dimen_30"
            android:paddingEnd="@dimen/dimen_25"
            android:paddingBottom="@dimen/dimen_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/feeding"
                android:textColor="@color/color_548FEB"
                android:textSize="@dimen/dimen_24"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:gravity="center_horizontal"
                android:text="@string/hungry_notice"
                android:textColor="@color/color_848484"
                android:textSize="@dimen/dimen_16" />

            <com.wallet.walkthedog.custom_view.ShadowContainer
                android:id="@+id/group_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/transparent"
                app:containerCornerRadius="@dimen/corner_radius"
                app:containerDeltaLength="@dimen/delta_length"
                app:containerShadowColor="@color/color_t_548FEB"
                app:containerShadowRadius="@dimen/shadow_radius"
                app:deltaX="@dimen/delta_x"
                app:deltaY="@dimen/delta_y">

                <TextView
                    android:id="@+id/txt_feeding"
                    android:layout_width="235dp"
                    android:layout_height="@dimen/dimen_43"
                    android:layout_gravity="center"
                    android:background="@drawable/button_gradual_background"
                    android:gravity="center"
                    android:text="@string/feeding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14" />

            </com.wallet.walkthedog.custom_view.ShadowContainer>
        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_30"
            android:background="@mipmap/icon_dialog_close" />

    </RelativeLayout>

</LinearLayout>