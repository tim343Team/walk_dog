<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_white"
            android:layout_marginTop="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_30"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingStart="@dimen/dimen_25"
            android:paddingEnd="@dimen/dimen_25"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/name_nickname"
                android:textColor="@color/color_548FEB"
                android:textSize="@dimen/dimen_23"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55"
                android:layout_gravity="center_horizontal"
                android:paddingStart="@dimen/dimen_20"
                android:paddingEnd="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/rectangle_f5f5f5"
                android:hint="@string/note_nickname"
                android:textColorHint="@color/color_848484"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/color_848484"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_refuse"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_white"
                    android:layout_marginEnd="@dimen/dp14"
                    android:elevation="@dimen/dimen_2"
                    android:text="@string/cancle"
                    android:textColor="@color/color_485EA8"
                    android:textSize="@dimen/dp14"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txt_accept"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_gradual_background"
                    android:layout_marginStart="@dimen/dp14"
                    android:elevation="@dimen/dimen_2"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp14"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/icon_dialog_close"/>

    </RelativeLayout>

</LinearLayout>