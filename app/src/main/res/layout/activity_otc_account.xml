<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llTitle"
        style="@style/TitlePaddingParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/otc_account" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_add"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/funding_account"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@mipmap/bg_input"
            android:hint="@string/please_enter_quantity"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="Balance:  2871.82" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_change"
        android:padding="10dp"
        android:src="@mipmap/icon_exchange"
        android:layout_gravity="center"
        android:background="@drawable/shape_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_2_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_account"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@mipmap/bg_input"
            android:hint="@string/please_enter_quantity"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_otc_money"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="Balance:  2871.82" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.wallet.walkthedog.custom_view.card.ShadowTextView
        android:id="@+id/tv_confim"
        android:layout_margin="15dp"
        android:padding="10dp"
        style="@style/defshadow_style"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>