<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llTitle"
        style="@style/TitlePaddingParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_add"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/view_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:background="@mipmap/bg_dialog_normal"
                android:padding="@dimen/dp10">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:text="Be full of go"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/img_dog"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_below="@+id/txt_status"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dimen_16" />

                <LinearLayout
                    android:id="@+id/ll_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_dog"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_equipment_1"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginEnd="@dimen/dp10"
                        android:background="@drawable/round_white"
                        android:padding="@dimen/dp5"
                        android:src="@mipmap/icon_add_equipment"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_equipment_2"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:background="@drawable/round_white"
                        android:padding="@dimen/dp5"
                        android:src="@mipmap/icon_add_equipment"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_equipment_3"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginStart="@dimen/dp10"
                        android:background="@drawable/round_white"
                        android:padding="@dimen/dp5"
                        android:src="@mipmap/icon_add_equipment"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_equipment"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:src="@mipmap/icon_more" />

                    <ImageView
                        android:id="@+id/img_identity"
                        android:layout_width="@dimen/dimen_27"
                        android:layout_height="@dimen/dimen_25"
                        android:layout_marginStart="@dimen/dp10"
                        android:background="@mipmap/icon_identity" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_40"
                android:layout_marginEnd="@dimen/dimen_40"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_level_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_4"
                        android:text="LEVEL 1ã€€"
                        android:textColor="@color/text_767676"
                        android:textSize="@dimen/dp15"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/progress_bg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_14"
                            android:layout_centerVertical="true"
                            android:background="@drawable/rectangle_ebeeff" />

                        <ImageView
                            android:id="@+id/progress_bar"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_14"
                            android:layout_centerVertical="true"
                            android:background="@drawable/button_gradual_background" />

                        <TextView
                            android:id="@+id/progress_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="20%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12" />
                    </RelativeLayout>

                </LinearLayout>

                <com.wallet.walkthedog.custom_view.card.ShadowTextView
                    android:id="@+id/tv_submit"
                    style="@style/defshadow_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/select"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:shadowGradientColor="#548FEB,#27408E" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>

