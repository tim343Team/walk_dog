<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/circular_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_30">

        <ImageView
            android:id="@+id/img_notice"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="@dimen/dimen_42"
            android:background="@mipmap/icon_normal" />

        <TextView
            android:id="@+id/txt_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center_horizontal"
            android:text="The props have been collected and placed in my props"
            android:textColor="@color/color_4D67C1"
            android:textSize="@dimen/dimen_18"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>