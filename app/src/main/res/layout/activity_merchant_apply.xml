<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llTitle"
        style="@style/TitlePaddingParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/merchant_apply_data" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_add"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp20"
            android:layout_marginVertical="@dimen/dimen_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/merchant_apply_data_1"
                android:textColor="@color/color_848484"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40"
                android:text="@string/email"
                android:textColor="@color/color_848484"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dp10"
                android:background="@mipmap/bg_edit"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dimen_15"
                android:textColor="@color/color_848484"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_13"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="@string/margin_currency"
                        android:textColor="@color/color_848484"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@mipmap/bg_edit">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLength="32"
                            android:paddingHorizontal="@dimen/dimen_15"
                            android:text="USDT- ERC20"
                            android:textColor="@color/color_848484"
                            android:textSize="14dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_13"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="@string/currency_num"
                        android:textColor="@color/color_848484"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@mipmap/bg_edit">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLength="32"
                            android:paddingHorizontal="@dimen/dimen_15"
                            android:text="2000"
                            android:textColor="@color/color_848484"
                            android:textSize="14dp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:text="@string/merchant_apply_data_2"
                android:textColor="@color/color_848484"
                android:textSize="14dp"
                />

            <ImageView
                android:layout_width="@dimen/dimen_180"
                android:layout_height="@dimen/dimen_180"
                android:layout_marginTop="@dimen/dp20"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="middle"
                android:text="该处缺少接口数据"
                android:textColor="#ff848484"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:text="@string/merchant_apply_data_3"
                android:textColor="#ff848484"
                android:textSize="14dp"
                />

            <RelativeLayout
                android:id="@+id/ll_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120"
                android:layout_marginTop="@dimen/dp10"
                android:background="@mipmap/bg_edit">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="Please upload image"
                    android:textColor="#ff848484"
                    android:textSize="14dp"
                    />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />

            </RelativeLayout>

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/tv_confirm"
                style="@style/defshadow_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_10"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/merchant_apply_imme"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

