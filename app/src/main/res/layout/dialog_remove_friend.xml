<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:paddingStart="@dimen/dimen_24"
        android:paddingEnd="@dimen/dimen_24"
        android:paddingBottom="@dimen/dimen_24">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:text="@string/remove_friend"
            android:textColor="@color/color_548FEB"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="@string/remove_friend_notice"
            android:textColor="@color/color_485EA8"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@mipmap/bg_dialog_normal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_friend_notice_2"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:text="12time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:text="24H44m"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="@string/remove_friend_notice_3"
            android:textColor="@color/color_848484"
            android:textSize="@dimen/dp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_cancle"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_white"
                android:layout_marginEnd="@dimen/dp14"
                android:elevation="@dimen/dimen_2"
                android:text="@string/cancle"
                android:textColor="@color/color_485EA8"
                android:textSize="@dimen/dp14"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_remove"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/button_gradual_background"
                android:layout_marginStart="@dimen/dp14"
                android:elevation="@dimen/dimen_2"
                android:text="@string/remove"
                android:textColor="@color/white"
                android:textSize="@dimen/dp14"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>