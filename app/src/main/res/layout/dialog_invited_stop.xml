<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:paddingStart="@dimen/dimen_24"
        android:paddingEnd="@dimen/dimen_24"
        android:paddingBottom="@dimen/dimen_24">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:text="@string/stop_invited"
            android:textColor="@color/color_548FEB"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="@string/treasure_together_2"
            android:textColor="@color/color_485EA8"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@mipmap/bg_dialog_normal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dog"
                android:layout_width="@dimen/dimen_132"
                android:layout_height="@dimen/dimen_129"
                android:layout_marginTop="@dimen/dimen_41"
                android:background="@mipmap/icon_null_dog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_16"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:text="12time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:text="24H44m"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_110"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp25"
                android:background="@drawable/rectangle_translucence"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp30"
                android:paddingTop="@dimen/dimen_20"
                android:paddingEnd="@dimen/dp30"
                android:paddingBottom="@dimen/dimen_16">

                <TextView
                    style="@style/TextWhiteStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/treasure_together" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_6">

                    <LinearLayout
                        android:id="@+id/view_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />

                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <com.wallet.walkthedog.custom_view.ShadowContainer
            android:id="@+id/group_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:containerCornerRadius="@dimen/corner_radius"
            app:containerDeltaLength="@dimen/delta_length"
            app:containerShadowColor="@color/color_t_548FEB"
            app:containerShadowRadius="@dimen/shadow_radius"
            app:deltaX="@dimen/delta_x"
            app:deltaY="@dimen/delta_y">

            <TextView
                android:id="@+id/txt_cancle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_43"
                android:layout_gravity="center"
                android:background="@drawable/button_gradual_background"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14" />

        </com.wallet.walkthedog.custom_view.ShadowContainer>
    </LinearLayout>

</LinearLayout>