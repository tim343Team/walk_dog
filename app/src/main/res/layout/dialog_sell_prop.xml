<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_white"
        android:padding="@dimen/dimen_20"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/sell_prop"
            android:textColor="@color/color_548FEB"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:background="@drawable/rectangle_f5f5f5">

            <EditText
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@null"
                android:hint="@string/enter_sell_price"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_24"
                android:paddingEnd="@dimen/dimen_24"
                android:text=""
                android:textColor="@color/color_848484"
                android:textColorHint="@color/color_848484"
                android:textSize="@dimen/dimen_14" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_cancle"
                style="@style/def_while_shadow_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_5"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/cancle"
                android:textColor="#485EA8"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />

            <com.wallet.walkthedog.custom_view.card.ShadowTextView
                android:id="@+id/txt_confirm"
                style="@style/defshadow_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/confirm"
                android:textColor="#FFF"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

