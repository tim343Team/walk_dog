<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp5"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginEnd="@dimen/dp5"
    android:layout_marginBottom="@dimen/dimen_10"
    android:background="@drawable/rectangle_white"
    android:elevation="@dimen/dimen_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_18"
        android:paddingTop="@dimen/dimen_18"
        android:paddingEnd="@dimen/dimen_18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_5"
                android:text="Beagle"
                android:textColor="@color/color_4D67C1"
                android:textSize="@dimen/dp14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_gender"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_5"
                android:background="@mipmap/icon_blue_male" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_83"
            android:layout_height="@dimen/dimen_83"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@mipmap/icon_dog_demo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_17"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/progress_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_14"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rectangle_ebeeff" />

                <ImageView
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_14"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_gradual_background" />

                <TextView
                    android:id="@+id/progress_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp10" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6"
                android:text="Lv.1"
                android:textColor="@color/color_676767"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 USDT"
            android:textColor="@color/color_4D67C1"
            android:textSize="@dimen/dp14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_rental_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:text="@string/available_rental_time"
            android:textColor="@color/color_848484"
            android:textSize="@dimen/dp12"
            android:textStyle="bold" />

        <com.wallet.walkthedog.custom_view.ShadowContainer
            android:id="@+id/group_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:background="@color/transparent"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            app:containerCornerRadius="@dimen/corner_radius"
            app:containerDeltaLength="@dimen/delta_length"
            app:containerShadowColor="@color/color_t_548FEB"
            app:containerShadowRadius="@dimen/shadow_radius"
            app:deltaX="@dimen/delta_x"
            app:deltaY="@dimen/delta_y">

            <TextView
                android:id="@+id/txt_cancle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_gravity="center"
                android:background="@drawable/button_gradual_background"
                android:gravity="center"
                android:text="@string/rental"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14" />

        </com.wallet.walkthedog.custom_view.ShadowContainer>

    </LinearLayout>


</RelativeLayout>